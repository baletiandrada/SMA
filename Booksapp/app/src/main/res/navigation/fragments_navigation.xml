<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragments_navigation"
    app:startDestination="@+id/navigation_books">

    <fragment
        android:id="@+id/navigation_books"
        android:name="com.example.booksapp.fragments.BooksReadFragment"
        android:label="View all books"
        tools:layout="@layout/fragment_books_read" />

    <fragment
        android:id="@+id/navigation_planning_books"
        android:name="com.example.booksapp.fragments.BooksPlannedFragment"
        android:label="Planning books"
        tools:layout="@layout/fragment_books_planned" />

    <fragment
        android:id="@+id/navigation_books_recommended"
        android:name="com.example.booksapp.fragments.BooksRecommendedFragment"
        android:label="More actions"
        tools:layout="@layout/fragment_books_recommended" />

    <fragment
        android:id="@+id/navigation_edit_profile"
        android:name="com.example.booksapp.fragments.FavouriteBooksFragment"
        android:label="Edit profile"
        tools:layout="@layout/fragment_favourite_books" />

    <fragment
        android:id="@+id/navigation_more_actions"
        android:name="com.example.booksapp.fragments.AccountSettingsFragment"
        android:label="More actions"
        tools:layout="@layout/fragment_account_settings" />

</navigation>