<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    card_view:cardBackgroundColor="@color/white"
    card_view:cardCornerRadius="5dp"
    card_view:cardElevation="5dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    android:layout_marginRight="5dp"
    android:layout_marginLeft="5dp">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="2dp">

    <TextView
        android:id="@+id/tv_text_quote"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:textStyle="italic"
        android:layout_gravity="right"
        android:textAlignment="center"
        tools:ignore="RtlCompat" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layout_edit_quote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Quote"
        android:textColorHint="#BFB5C1"
        android:layout_margin="10dp"
        android:layout_gravity="center"
        app:boxBackgroundColor="@color/white">
        <EditText
            android:id="@+id/et_edit_quote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black" />
    </com.google.android.material.textfield.TextInputLayout>

    <ImageView
        android:id="@+id/iv_arrow_down"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_arrow_down"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"/>

    <LinearLayout
        android:id="@+id/layout_open_edit"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_gravity="center">
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_edit_quote"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_margin="2dp"
                android:src="@drawable/ic_edit_book"
                android:tint="#2E6B79"/>
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_delete_quote"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/ic_close"
                android:tint="#2E6B79"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_close_edit"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_gravity="center">
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_save_edit_quote"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_margin="2dp"
                android:src="@drawable/ic_check_book"
                android:tint="#2E6B79"/>
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_clear_edit_quote"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/ic_close"
                android:tint="#2E6B79"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_arrow_up"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_arrow_up"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"/>


</LinearLayout>
</androidx.cardview.widget.CardView>