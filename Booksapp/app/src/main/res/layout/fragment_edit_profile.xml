<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/book_background4"
    tools:context=".fragments.EditUserDataFragment">

    <TextView
        android:id="@+id/tv_intro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:textAlignment="center"
        android:textColor="#305368"
        android:textStyle="bold"
        android:textSize="20sp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4">
        <TextView
            android:id="@+id/tv_username_hardcoded"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Username: "
            android:textAlignment="center"
            android:textColor="#305368"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_weight="2"/>
        <EditText
            android:id="@+id/et_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:hint="Enter the new username"
            android:textColorHint="#9B849F "
            android:textStyle="bold"
            android:layout_weight="2"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4">
        <TextView
            android:id="@+id/tv_age_hardcoded"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Age: "
            android:textAlignment="center"
            android:textColor="#305368"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_weight="2"/>
        <EditText
            android:id="@+id/et_age"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:hint="Enter the new age"
            android:textColorHint="#9B849F "
            android:textStyle="bold"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4">
        <TextView
            android:id="@+id/tv_email_hardcoded"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Email: "
            android:textAlignment="center"
            android:textColor="#305368"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_weight="2"/>
        <EditText
            android:id="@+id/et_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:hint="Enter the new email"
            android:textColorHint="#9B849F "
            android:textStyle="bold" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_updateUserData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="Update your data"
        android:textColor="@android:color/white"
        android:padding="10dp" />

    <Button
        android:id="@+id/btn_changePasswordTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="Change password"
        android:textColor="@android:color/white"
        android:padding="10dp" />

    <EditText
        android:id="@+id/et_old_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:hint="Enter the old password"
        android:textColorHint="#9B849F "
        android:textStyle="bold"
        android:inputType="textPassword"/>

    <EditText
        android:id="@+id/et_new_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:hint="Enter the new password"
        android:textColorHint="#9B849F "
        android:textStyle="bold"
        android:inputType="textPassword"/>

    <EditText
        android:id="@+id/et_confirm_new_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:hint="Confirm the new password"
        android:textColorHint="#9B849F "
        android:textStyle="bold"
        android:inputType="textPassword"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4">
        <Button
            android:id="@+id/btn_changePasswordBottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="Change password"
            android:textColor="@android:color/white"
            android:padding="10dp"
            android:layout_weight="2"/>
        <Button
            android:id="@+id/btn_cancelChangePasswordBottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="Cancel"
            android:textColor="@android:color/white"
            android:padding="10dp"
            android:layout_weight="2"/>
    </LinearLayout>

</LinearLayout>