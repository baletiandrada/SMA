<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".ChangePasswordActivity"
    android:background="#F7F7F7">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layout_old_password"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="Old password"
        android:textColorHint="#BFB5C1"
        android:layout_margin="10dp"
        android:layout_gravity="center"
        app:boxBackgroundColor="@color/white">
        <EditText
            android:id="@+id/et_old_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:inputType="textPassword"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layout_new_password"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="New password"
        android:textColorHint="#BFB5C1"
        android:layout_margin="10dp"
        android:layout_gravity="center"
        app:boxBackgroundColor="@color/white">
        <EditText
            android:id="@+id/et_new_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:inputType="textPassword"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layout_confirm_new_password"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="Confirm new password"
        android:textColorHint="#BFB5C1"
        android:layout_margin="10dp"
        android:layout_gravity="center"
        app:boxBackgroundColor="@color/white">
        <EditText
            android:id="@+id/et_confirm_new_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:inputType="textPassword"/>
    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4"
        android:layout_marginTop="30dp">
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_changePasswordBottom"
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/custom_button"
            android:text="Change"
            android:textColor="@color/purple_200"
            android:layout_weight="2"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_cancelChangePasswordBottom"
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/custom_button"
            android:text="Cancel"
            android:textColor="@color/purple_200"
            android:layout_weight="2"/>
    </LinearLayout>

</LinearLayout>