<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#F7F7F7">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    tools:context=".BookEditActivity">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layout_edit_author_name"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="New author name"
        android:textColorHint="#BFB5C1"
        android:layout_margin="10dp"
        android:layout_gravity="center"
        app:boxBackgroundColor="@color/white">
    <EditText
        android:id="@+id/et_edit_author_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layout_edit_book_title"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="New book title"
        android:textColorHint="#BFB5C1"
        android:layout_margin="10dp"
        android:layout_gravity="center"
        app:boxBackgroundColor="@color/white">
    <EditText
        android:id="@+id/et_edit_book_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layout_edit_read_month"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="New month (optional)"
        android:textColorHint="#BFB5C1"
        android:layout_margin="10dp"
        android:layout_gravity="center"
        app:boxBackgroundColor="@color/white">
    <EditText
        android:id="@+id/et_edit_read_month"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layout_edit_read_year"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="New year"
        android:textColorHint="#BFB5C1"
        android:layout_margin="10dp"
        android:layout_gravity="center"
        app:boxBackgroundColor="@color/white">
    <EditText
        android:id="@+id/et_edit_read_year"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layout_edit_genre"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="New genre"
        android:textColorHint="#BFB5C1"
        android:layout_margin="10dp"
        android:layout_gravity="center"
        app:boxBackgroundColor="@color/white">
    <EditText
        android:id="@+id/et_edit_genre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layout_edit_description"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="Description"
        android:textColorHint="#BFB5C1"
        android:layout_margin="10dp"
        android:layout_gravity="center"
        app:boxBackgroundColor="@color/white"
        android:visibility="gone">
        <EditText
            android:id="@+id/et_edit_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black" />
    </com.google.android.material.textfield.TextInputLayout>

    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/checkbox_add_photo_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#5D2448"
        android:text="Add photo"
        android:buttonTint="@color/purple_200"
        android:textStyle="bold"
        android:textSize="15dp"
        android:layout_gravity="center"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_gravity="center">
        <androidx.cardview.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            card_view:cardBackgroundColor="#F7F7F7"
            card_view:cardCornerRadius="10dp"
            card_view:cardElevation="4dp"
            android:layout_gravity="center"
            android:layout_margin="25dp">
            <ImageView
                android:layout_width="45dp"
                android:layout_margin="2dp"
                android:layout_height="45dp"
                android:id="@+id/iv_chooseImg_edit"
                android:src="@drawable/ic_choose_image"
                android:visibility="gone"/></androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view_img_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="20dp"
            android:layout_marginBottom="15dp"
            card_view:cardElevation="8dp"
            android:layout_below="@+id/linear_layout"
            card_view:cardBackgroundColor="@android:color/white">
            <ImageView
                android:layout_width="90dp"
                android:layout_height="115dp"
                android:id="@+id/iv_showImgChoosed_edit"
                android:scaleType="fitXY"
                android:visibility="gone"/></androidx.cardview.widget.CardView></LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="20dp"
        android:layout_gravity="center">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_change_book_data"
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/custom_button"
            android:text="Update book"
            android:textColor="@color/purple_200" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_cancel_edit_activity"
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:text="Cancel"
            android:textColor="@color/purple_200"
            android:background="@drawable/custom_button"/>
    </LinearLayout>

</LinearLayout>
</androidx.core.widget.NestedScrollView>