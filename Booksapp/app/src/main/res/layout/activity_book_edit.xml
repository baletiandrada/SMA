<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/book_background4"
    tools:context=".BookEditActivity">

    <EditText
        android:id="@+id/et_edit_author_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textColor="@android:color/black"
        android:hint="Enter the new author's name"
        android:textColorHint="#BFB5C1"
        android:textAlignment="center"/>

    <EditText
        android:id="@+id/et_edit_book_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textColor="@android:color/black"
        android:hint="Enter the new book title"
        android:textColorHint="#BFB5C1"
        android:textAlignment="center"/>

    <EditText
        android:id="@+id/et_edit_read_month"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textColor="@android:color/black"
        android:hint="Enter the new month (optional)"
        android:textColorHint="#BFB5C1"
        android:textAlignment="center"/>

    <EditText
        android:id="@+id/et_edit_read_year"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textColor="@android:color/black"
        android:hint="Enter the new year"
        android:textColorHint="#BFB5C1"
        android:textAlignment="center"/>

    <EditText
        android:id="@+id/et_edit_genre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textColor="@android:color/black"
        android:hint="Enter the new genre"
        android:textColorHint="#BFB5C1"
        android:textAlignment="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="6"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="150dp">

        <Button
            android:id="@+id/btn_change_book_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:layout_margin="20dp"
            android:text="Update"
            android:textColor="@android:color/white"
            android:padding="10dp" />
        <Button
            android:id="@+id/btn_cancel_edit_activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:layout_margin="20dp"
            android:text="Cancel"
            android:textColor="@android:color/white"
            android:padding="10dp" />

    </LinearLayout>

</LinearLayout>