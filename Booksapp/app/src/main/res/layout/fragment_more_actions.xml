<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F7F7">

    <LinearLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F7F7F7"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_anchor="@+id/relativeLayout"
        app:layout_anchorGravity="center"
        tools:context=".fragments.MoreActionsFragment">


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layout_et_username"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="130dp"
            android:layout_marginBottom="10dp"
            android:hint="New username"
            android:textColorHint="#BFB5C1"
            app:boxBackgroundColor="@color/white">

            <EditText
                android:id="@+id/et_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layout_et_age"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:hint="New age"
            android:textColorHint="#BFB5C1"
            app:boxBackgroundColor="@color/white">

            <EditText
                android:id="@+id/et_age"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layout_et_email"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:hint="New email"
            android:textColorHint="#BFB5C1"
            app:boxBackgroundColor="@color/white">

            <EditText
                android:id="@+id/et_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black" />
        </com.google.android.material.textfield.TextInputLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_updateUserData"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/custom_button_2"
            android:text="Update"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tv_more"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="More actions"
            android:textStyle="bold"
            android:textSize="16dp"
            android:layout_marginTop="20dp"
            android:textAlignment="center"
            android:textColor="@color/purple_200"/>

        <ImageView
            android:id="@+id/iv_arrow_down_more"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:src="@drawable/ic_arrow_down"
            android:tint="@color/purple_200"/>

        <ImageView
            android:id="@+id/iv_arrow_up_more"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_arrow_up"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:tint="@color/purple_200" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_changePasswordTop"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginBottom="15dp"
            android:layout_gravity="center"
            android:background="@drawable/custom_button_2"
            android:text="Change password"
            android:textColor="@color/white"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_delete_account"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="@drawable/custom_button_2"
            android:text="Delete account"
            android:textColor="@color/white" />

    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_margin="16dp"
        android:scaleType="center"
        android:elevation="5dp"
        app:fabSize="normal"
        android:backgroundTint="@color/purple_200"
        android:src="@drawable/ic_exit"
        app:tint="@color/white"
        app:borderWidth="0dp">
    </com.google.android.material.floatingactionbutton.FloatingActionButton>

</androidx.coordinatorlayout.widget.CoordinatorLayout>