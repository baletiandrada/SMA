<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/add_book_background">
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AddBookReadToFirebase">

    <Button
        android:id="@+id/btnTop_addBook"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="Add a book that you've read"
        android:background="#612937"
        android:textColor="@android:color/white"
        android:padding="10dp" />

    <EditText
        android:id="@+id/et_authorName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:textAlignment="center"
        android:hint="Enter the author's name"
        android:textColor="@color/black"
        android:textColorHint="#305368"
        android:textStyle="bold"
        android:textSize="20sp"/>

    <EditText
        android:id="@+id/et_bookTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textColorHint="#305368"
        android:textStyle="bold"
        android:hint="Enter the book title"
        android:textSize="20sp"/>

    <EditText
        android:id="@+id/et_readingYear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:textAlignment="center"
        android:hint="Enter the year"
        android:textColor="@color/black"
        android:textColorHint="#305368"
        android:textStyle="bold"
        android:textSize="20sp"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp">

        <Button
            android:id="@+id/btnBottom_addBook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="25dp"
            android:background="#612937"
            android:padding="10dp"
            android:text="Add the book"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/btnBottom_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="25dp"
            android:background="#612937"
            android:padding="10dp"
            android:text="Cancel"
            android:textColor="@android:color/white" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_book_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="30dp"
        android:orientation="horizontal"/>

</LinearLayout>
</ScrollView>